o <%= link_to "Cancelar", :action => "show", :id => @project.uid, :type => @project.type %>
</form>

<script type="text/javascript">
Calendar.setup({
    inputField : "fecha_entrega_diseno",
    ifFormat   : "%d/%m/%y",
    button     : "trigger_d"
});

Calendar.setup({
    inputField : "fecha_entrega_planeamiento",
    ifFormat   : "%d/%m/%y",
    button     : "trigger_p"
});

Calendar.setup({
    inputField : "fecha_entrega_costos",
    ifFormat   : "%d/%m/%y",
    button     : "trigger_c"
});

<% if @entrega_editable -%>
Calendar.setup({
    inputField : "fecha_entrega_odt",
    ifFormat   : "%d/%m/%y",
    button     : "trigger_o"
});
<% end -%>
</script>

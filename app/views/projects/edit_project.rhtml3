<input type="text" name="hora_entrega_costos" maxlength="4" size="4" value="<%= @form.hora_entrega_costos %>">
<%= @form.to_html :hora_am_pm_costos %>
<%= @form.e :hora_entrega_costos %>

</td></tr>
</table>
<br>

<% if @entrega_editable -%>
<table border="0" cellpadding="0" cellspacing="0">
<tr><td valign="top">

<b>Fecha tentativa de entrega al Cliente</b><br>
<input type="text" id="fecha_entrega_odt" name="fecha_entrega_odt" value="<%= @form.fecha_entrega_odt %>" readonly="true">
